<ul class="nav nav-tabs">
  <% @round.groups.each do |group| %>
    <li <% if @group.number == group.number %>class="active"<% end %>>
      <%= link_to group.name, :round => @round.number, :group => group.number %>
    </li>
  <% end %>
</ul>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Competitor</th>
      <th>Time #1</th>
      <th>Time #2</th>
      <th>Time #3</th>
      <th>Time #4</th>
      <th>Time #5</th>
      <th>Best</th>
      <th>Worst</th>
      <th>Average</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @results %>
  </tbody>
</table>
