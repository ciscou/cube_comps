<%= form_for @competition, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Competition</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :city, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :city, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :start_on, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :start_on, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :end_on, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :end_on, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "has_events", "Events", :class => 'control-label' %>
      <div class="controls">
        <% Event.all.each do |event| %>
          <label class="checkbox">
            <%= f.check_box "has_event_#{event.code}", :class => 'check_box' %>
            <%= event.name %>
          </label>
        <% end %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', competitions_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
