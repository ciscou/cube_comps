<%= form_for @competition, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Competition</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :city, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :city, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :start_on, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :start_on, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :end_on, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :end_on, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "has_categories", "Categories", :class => 'control-label' %>
      <div class="controls">
        <% Category.all.each do |category| %>
          <%= f.label "has_category_#{category.code}", :class => 'checkbox' do %>
            <%= f.check_box "has_category_#{category.code}", :class => 'check_box' %>
            <%= category.name %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', competitions_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
