<%= form_for [@competition, @event], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Event</legend>

    <div class="control-group">
      <%= f.label :rounds_count, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :rounds_count, :class => 'number_field' %>
      </div>
    </div>

    <%= f.hidden_field :category_code %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', @competition, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
